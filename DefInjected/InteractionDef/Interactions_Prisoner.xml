<LanguageData>

	<BuildRapport.label>попытка наладить контакт</BuildRapport.label>
	<BuildRapport.logRulesInitiator.rulesStrings>
        <li>r_logentry(p=3)->[INITIATOR_nameDef] рассказывает [RECIPIENT_nameDef] [story_kind] [subject].</li>
